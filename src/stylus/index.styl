-pos(type, args)
	i = 0
	position: unquote(type)
	{args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
	{args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0

absolute()
	-pos('absolute', arguments)
relative()
	-pos('relative', arguments)

nav-item-height = 60px
touch-icon-bg = #504e4e

body,
p,
h2,
h3,
ul
	padding 0
	margin 0
ul
	li
		list-style none
body
	background-color #f7f7f7
	background-size cover
a
	color #000
	text-decoration none
.navbar
	position fixed
	position sticky
	top 0
	left 0
	right 0
	color #fff
	background rgba(0, 0, 0, .8)
	z-index 99
	li
		display inline-block
		height nav-item-height
		margin 0 20px
		line-height nav-item-height
		a
			display block
			color #fff
.contain
	width 85%
	min-width 320px
	margin 40px auto
.intro
	padding 10px
	padding-top 30px
	&__left
		display flex
	.avatar
		width 100px
		height 100px
		margin-right 16px
		border-radius 50%
		background url('../imgs/avatar.png') center no-repeat
		background-size cover
	p
		flex 1
		margin 20px 0
		text-align left
	&__right
		margin-left 116px
	&-content
		font-size 20px
.touch
	.item
		display inline-block
		vertical-align middle
		&-block
			display block
			margin 10px 0
		&-content-text
			font-weight bold
		&-icon
			border-radius 50%
	&-icon 
		position relative
		display inline-block
		width 32px
		height 32px
		border 2px solid touch-icon-bg
		color #fff
		font-size 20px
		text-align center
		border-radius 50%
		background #fff
		transition all .3s ease-in-out
		&:before
			position absolute
			top 50%
			left 50%
			margin-top -15px
			margin-left -15px
			width 100%
			color touch-icon-bg
			font-size 28px
		&.icon-github
			&:before
				margin-top -12px
				margin-left -16px
		&.icon-blog
			&:before
				margin-top -13px
	&-item-wrap
		&:hover
			.touch-icon
				background touch-icon-bg
				&:before
					color #fff
			.icon-blog
				color #fff

