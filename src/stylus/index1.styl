-pos(type, args)
	i = 0
	position: unquote(type)
	{args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
	{args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0

absolute()
	-pos('absolute', arguments)
relative()
	-pos('relative', arguments)

body,
p
	padding 0
	margin 0
a
	color #000
	text-decoration none
.particleSys 
	relative()
	width 100%
	background url(../imgs/bg3.jpg) center no-repeat
	background-size cover
	.intro
		absolute(top 50% left 50%)
		display inline-block
		width 500px
		height 250px
		padding 10px
		border 2px solid #fff
		color #fff
		text-align center
		border-radius 8px
		transform translate(-50%, -50%)
	.pro
		width 50px
		height 50px
		background-color rgba(255, 255, 255, .3)
.projects
	width 80
	height 300px
	margin 30px auto
	overflow hidden
	.item
		display inline-block
		width 300px
		height 300px
		margin 0 10px
		background url(../imgs/match.png) center no-repeat
		&:hover
			.title
				opacity 1
				transform tanslateY(0)
	.match
		background-image url(../imgs/match.png)
		background-size contain
	.teach
		background-image url(../imgs/teach.png)
		background-size contain
		.title
			font-size 30px
	.title
		width 100%
		height 100%
		color #000
		text-align center
		line-height 300px
		font-size 35px
		font-weight bold
		background-color rgba(225, 225, 225, .3)
		opacity 0
		transform tanslateY(-300px)