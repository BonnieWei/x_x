-pos(type, args)
	i = 0
	position: unquote(type)
	{args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
	{args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0

absolute()
	-pos('absolute', arguments)
relative()
	-pos('relative', arguments)

body
	padding 0
	margin 0
.container
	width 640px
	margin 50px auto
.stage
	relative()
	width 500px
	height 400px
	margin 0 auto
	overflow hidden
	perspective 270px
.stage,
.controller,
.wrap
	transform-style preserve-3d
.controller
	transform rotateY(0deg) translateY(-300px)
	animation threeRotate 15s linear infinite
.wrap
	relative()
	width 100px
	height 1000px
	margin auto
	.side
		absolute left -1px top -1px
		width 100px
		height 1000px
		background url(../images/sun.jpg) 0 0 no-repeat
		background-size cover
	for index in 1..40
		.side{index}
			background-position -100px * (index - 1) 0
			transform rotateY(18deg * index) translateZ(290px)

@keyframes threeRotate 
	form 
		transform rotateY(0deg) translateY(-200px)
	to 
		transform rotateY(360deg) translateY(-200px)
	
